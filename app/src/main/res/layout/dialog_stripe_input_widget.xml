<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_choose_coupon_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/stripe_pay"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeeeeee" />

    <com.stripe.android.view.CardInputWidget
        android:id="@+id/stripe_input_widget"
        android:background="@color/color_EEEEEE"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.stripe.android.view.CardInputWidget>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_affirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_EC5413"
        android:text="@string/affirm"
        android:textColor="@color/color_FFFFFF"
        android:textSize="17sp" />

</LinearLayout>