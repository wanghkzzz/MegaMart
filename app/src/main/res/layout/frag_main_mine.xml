<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llyt_mine_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/mine_top_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.benben.commoncore.widget.badgeview.BGABadgeImageView
                            android:id="@+id/iv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            app:badge_verticalMargin="0dp"
                            android:src="@mipmap/nav_xiaoxi" />

                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:src="@mipmap/icon_setting_white" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rlyt_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <com.benben.commoncore.widget.CircleImageView
                            android:id="@+id/iv_header"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/mine_no_login_header" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_header"
                            android:drawableRight="@mipmap/icon_right_white"
                            android:drawablePadding="10dp"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:text="@string/not_logged_in"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="164dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_white_radius8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_wallet"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_my_wallet"
                        android:textColor="#1A1A1A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_coupon"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_my_coupon"
                        android:textColor="#1A1A1A"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_invitation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_invitation"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_my_invitation"
                        android:textColor="#1A1A1A"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape_white_radius8"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="19dp"
                        android:paddingBottom="19dp"
                        android:text="@string/mine_my_order"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_whole_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/icon_mine_right_black"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="19dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="19dp"
                        android:text="@string/mine_all_order"
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_all"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_order_all"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_order_all"
                        android:textColor="#181818"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_delivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_order_delivery"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_order_delivery"
                        android:textColor="#181818"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_paid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_order_paid"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_order_paid"
                        android:textColor="#181818"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_refund"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/mine_order_refound"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="13dp"
                        android:text="@string/mine_order_refund"
                        android:textColor="#181818"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_white_radius8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/mine_collection"
                    android:drawableRight="@mipmap/icon_mine_right_black"
                    android:drawablePadding="15dp"
                    android:padding="17dp"
                    android:text="@string/mine_my_collection"
                    android:textColor="#181818"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/view_line" />

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/mine_feedback"
                    android:drawableRight="@mipmap/icon_mine_right_black"
                    android:drawablePadding="15dp"
                    android:padding="17dp"
                    android:text="@string/mine_my_feedback"
                    android:textColor="#181818"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/view_line" />

                <TextView
                    android:id="@+id/tv_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/mine_connection"
                    android:drawableRight="@mipmap/icon_mine_right_black"
                    android:drawablePadding="15dp"
                    android:padding="17dp"
                    android:text="@string/mine_my_connection"
                    android:textColor="#181818"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/view_line" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/mine_about"
                    android:drawableRight="@mipmap/icon_mine_right_black"
                    android:drawablePadding="15dp"
                    android:padding="17dp"
                    android:text="@string/mine_my_about"
                    android:textColor="#181818"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/view_line" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>