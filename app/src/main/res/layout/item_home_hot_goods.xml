<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/shape_home_goods_title_left_icon_bg" />

        <TextView
            android:id="@+id/tv_goods_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/sell_well_products"
            android:textColor="@color/color_333333"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/llyt_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/still_more"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sell_well_products"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llyt_first_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <ImageView
                android:id="@+id/iv_first_goods_thumb"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder" />

            <TextView
                android:id="@+id/tv_first_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp">

                <TextView
                    android:id="@+id/tv_first_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/goods_price"
                    android:textColor="@color/color_EC4113"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_first_goods_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_toRightOf="@id/tv_first_goods_price"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/goods_price"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_first_sell_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_first_goods_price"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sell_count"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_first_add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_tianjia" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_second_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/iv_second_goods_thumb"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder" />

            <TextView
                android:id="@+id/tv_second_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp">


                <TextView
                    android:id="@+id/tv_second_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/goods_price"
                    android:textColor="@color/color_EC4113"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_second_goods_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_toRightOf="@id/tv_second_goods_price"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/goods_price"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_second_sell_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_second_goods_price"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sell_count"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_second_add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_tianjia" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_F5F5F5" />

</LinearLayout>