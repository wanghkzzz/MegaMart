<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_jianbian"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:padding="15dp"
        android:src="@mipmap/iv_back" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/img_wenan" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/bg_bai"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/llyt_more_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_width="35dp"
                android:layout_height="1dp"
                android:background="@color/color_EC5413"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/more_special_offers"
                android:textColor="@color/color_EC5413"
                android:textSize="20sp" />
            <View
                android:layout_width="35dp"
                android:layout_height="1dp"
                android:background="@color/color_EC5413"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_coupon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llyt_more_discount"
            android:layout_marginBottom="15dp">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</LinearLayout>